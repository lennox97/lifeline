<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="@android:color/black"
    android:padding="10dp">

    <LinearLayout
        android:id="@+id/LinLayoutAdminPanel"
        android:background="@drawable/header"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="vertical">
    </LinearLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:background="@android:color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:background="@drawable/quoteoftheday"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:orientation="vertical" >
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:orientation="vertical">

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    app:cardBackgroundColor="@android:color/white">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="15dp">

                        <TextView
                            android:id="@+id/txtTitle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Evenimente Moderne Sunt Făcute Clare Prin Profeție"
                            android:textAlignment="center"
                            android:textColor="@android:color/black"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:typeface="sans"
                            app:fontFamily="sans-serif" />

                        <TextView
                            android:id="@+id/txtYear"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text=" 65-1206"
                            android:textAlignment="center"
                            android:textColor="@android:color/black"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:typeface="sans"
                            android:layout_marginBottom="20dp"
                            app:fontFamily="sans-serif" />

                        <TextView
                            android:id="@+id/txtMesaj"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="172 Însă realul, rânduitul de Dumnezeu... Acea genă reală, acel germene real, un suflet al lui Dumnezeu care a fost în Dumnezeu înainte de întemeierea lumii... Amintiți-vă, voi care cu adevărat aveți Duhul lui Dumnezeu în voi în seara aceasta, voi ați fost aici în Cristos, deoarece El a fost plinătatea Cuvântului. El a fost plinătatea Dumnezeirii trupește. Dumnezeu era în Cristos, reconciliind lumea cu Sine. Credeți voi aceea? Priviți, El era în Cristos. Atunci, dacă voi ați fost in Dumnezeu, o genă, un cuvânt, un atribut de la început, atunci voi ați umblat cu El aici pe pământ, ați vorbit cu El aici pe pământ, ați suferit cu El pe pământ, ați murit cu El la Calvar și ați înviat cu El din nou. Iar acum ședeți în locuri cerești în Cristos Isus, având comuniune cu El, Cuvântul, așa cum Acesta se hrănește în sufletul vostru, că “Omul va trăi prin fiecare Cuvânt care iese...” "
                            android:textColor="@android:color/black"
                            android:textSize="14sp"
                            android:typeface="sans"
                            android:paddingBottom="15dp"
                            app:fontFamily="sans-serif" />
                    </LinearLayout>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    app:cardBackgroundColor="@android:color/white">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="15dp">

                        <TextView
                            android:id="@+id/txtDailyBread"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="1 Ioan 4:15"
                            android:textColor="@android:color/black"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:typeface="sans"
                            app:fontFamily="sans-serif" />

                        <TextView
                            android:id="@+id/txtVerset"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="Oricine va mărturisi că Isus este Fiul lui Dumnezeu, Dumnezeu rămâne în el și el în Dumnezeu."
                            android:textColor="@android:color/black"
                            android:textSize="14sp"
                            android:typeface="sans"
                            android:paddingBottom="15dp"
                            app:fontFamily="sans-serif" />
                    </LinearLayout>
                </android.support.v7.widget.CardView>


                <LinearLayout
                    android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorGray"
                    android:padding="10dp"
                    android:layout_margin="10dp">

                    <ImageView
                        android:id="@+id/iv_play"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/selector_play"
                        android:layout_margin="10dp"/>
                    <TextView
                        android:id="@+id/txtTimeElasped"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0:00"
                        android:textAlignment="center"
                        android:layout_gravity="center"/>
                    <SeekBar
                        android:id="@+id/seekbar"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="10dp">

                <TextView
                    android:id="@+id/txtArhiva"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Arhivă"
                    android:textAppearance="@style/TextAppearance.AppCompat.Title" />

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:background="@color/colorGray">

                        <ImageView
                            android:layout_margin="5dp"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:src="@drawable/test"/>
                        <ImageView
                            android:layout_margin="5dp"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:src="@drawable/test"/>
                        <ImageView
                            android:layout_margin="5dp"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:src="@drawable/test"/>
                        <ImageView
                            android:layout_margin="5dp"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:src="@drawable/test"/>
                        <ImageView
                            android:layout_margin="5dp"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:src="@drawable/test"/>
                    </LinearLayout>

                </HorizontalScrollView>

            </LinearLayout>
        </LinearLayout>

    </ScrollView>

</LinearLayout>